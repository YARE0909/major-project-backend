generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  journeys  Journey[]
}

model Journey {
  id        String        @id @default(uuid())
  user      User          @relation(fields: [userId], references: [id])
  userId    String
  status    JourneyStatus @default(PLANNED)
  totalCost Float?
  totalTime Int?
  createdAt DateTime      @default(now())
  legs      JourneyLeg[]
  booking   Booking?
  payments  Payment[]
}

model JourneyLeg {
  id          String        @id @default(uuid())
  journey     Journey       @relation(fields: [journeyId], references: [id])
  journeyId   String
  mode        TransportMode
  source      String
  destination String
  cost        Float
  duration    Int
  order       Int
  status      LegStatus     @default(PENDING)

  ticket     Ticket?
  travelPass LegTravelPass?
}

model Booking {
  id        String        @id @default(uuid())
  journey   Journey       @relation(fields: [journeyId], references: [id])
  journeyId String        @unique
  status    BookingStatus
  createdAt DateTime      @default(now())
}

model Payment {
  id          String        @id @default(uuid())
  journey     Journey       @relation(fields: [journeyId], references: [id])
  journeyId   String
  amount      Float
  currency    String        @default("INR")
  status      PaymentStatus @default(PENDING)
  provider    String
  providerRef String?
  breakdown   Json
  createdAt   DateTime      @default(now())
}

model Ticket {
  id           String       @id @default(uuid())
  journeyLeg   JourneyLeg   @relation(fields: [journeyLegId], references: [id])
  journeyLegId String       @unique
  provider     String
  externalRef  String?
  status       TicketStatus @default(PENDING)
  createdAt    DateTime     @default(now())
}

model LegTravelPass {
  id           String     @id @default(uuid())
  journeyLeg   JourneyLeg @relation(fields: [journeyLegId], references: [id])
  journeyLegId String     @unique
  qrData       String?    @db.LongText
  validFrom    DateTime
  validTill    DateTime
  createdAt    DateTime   @default(now())
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

enum TicketStatus {
  PENDING
  CONFIRMED
  FAILED
}

enum JourneyStatus {
  PLANNED
  BOOKED
  COMPLETED
  CANCELLED
}

enum TransportMode {
  METRO
  BUS
  AUTO
  CAB
  TRAIN
  WALK
}

enum LegStatus {
  PENDING
  COMPLETED
  CANCELLED
}

enum BookingStatus {
  SUCCESS
  FAILED
  PENDING
}
